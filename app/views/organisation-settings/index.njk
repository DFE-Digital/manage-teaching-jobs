
{% extends "layout.njk" %}

{% set title = 'Organisation settings' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">
        {{title}}
      </h1>

      {% if user.organisation.type == 'School' %}
        <p><a href="#">View school page (opens in new tab)</a></p>
      {% else %}
        <p><a href="#">View organisation page (opens in new tab)</a></p>
      {% endif %}

      {% set address %}
        {% for part, value in user.organisation.address %}
          {{value}}{% if not loop.last %}, {% endif %}
        {% endfor %}
      {% endset %}

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Name"
            },
            value: {
              text: user.organisation.name
            }
          },
          {
            key: {
              text: "Unique reference number (URN)"
            },
            value: {
              text: "1234567"
            }
          },
          {
            key: {
              text: "Address"
            },
            value: {
              text: address
            }
          },
          {
            key: {
              text: "Age group"
            },
            value: {
              text: "Item value"
            }
          },
          {
            key: {
              text: "Type"
            },
            value: {
              text: "Item value"
            }
          },
          {
            key: {
              text: "Website"
            },
            value: {
              html: '<a href="https://www.busheymeads.sch.uk">https://www.busheymeads.sch.uk (opens in new tab)</a>'
            },
            actions: {
              items: [
                {
                  href: "Item URL",
                  text: "Change",
                  visuallyHiddenText: "Item label"
                }
              ]
            }
          },
          {
            key: {
              text: "Description"
            },
            value: {
              html: 'Our school is the best.'
            },
            actions: {
              items: [
                {
                  href: "Item URL",
                  text: "Change",
                  visuallyHiddenText: "Item label"
                }
              ]
            }
          }
        ]
      }) }}





    </div>
  </div>

{% endblock %}
