
{% extends "layout.njk" %}

{% if user.organisation.schools %}
  {% set title = 'Add your logo and photo to your organisation profile' %}
{% else %}
  {% set title = 'Add your logo and photo to your school profile' %}
{% endif %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if user.organisation.schools %}
        <h1 class="govuk-heading-l">{{title}}</h1>
        <p>You can now upload your logo and photo to your organisation profile.</p>
        <p>The details you add to your organisation profile will be included in your job listings.</p>
      {% else %}
        <h1 class="govuk-heading-l">{{title}}</h1>
        <p>You can now upload your logo and photo to your school profile.</p>
        <p>The details you add to your school profile will be included in your job listings.</p>
      {% endif %}

      {{ govukButton({
        text: "Add logo and photo",
        href: "/organisation"
      }) }}

      <p><a href="/jobs">Skip to job listings</a></p>

