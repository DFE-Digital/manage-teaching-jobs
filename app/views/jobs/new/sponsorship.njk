{% extends "layout.njk" %}

{% set heading = "Can your school offer skilled worker visa sponsorship to non-UK citizens?" %}
{% set caption = 'Create job listing - section 3 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form action="" method="post">

        <div class="govuk-form-group">
          <fieldset aria-describedby="createJob[sponsorship]-hint" class="govuk-fieldset">
            <h1 class="govuk-fieldset__heading">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <span class="govuk-caption-l">Create job listing - section 3 of 4</span> 
                Can your school offer skilled worker visa sponsorship to non-UK citizens?
              </legend>
            </h1>
            
            <p class="govuk-body">
              You can check if your school or organisation is already <a target="_blank" href="https://www.gov.uk/government/publications/register-of-licensed-sponsors-workers">registered to sponsor non-UK citizens<span class="govuk-visually-hidden"> (opens in new tab)</span></a>. There is also guidance on how to <a target="_blank" href="https://www.gov.uk/guidance/recruit-teachers-from-overseas">recruit teachers from overseas<span class="govuk-visually-hidden"> (opens in new tab)</span></a>.
            </p>
            
            <div class="govuk-radios" data-module="govuk-radios">
              <div class="govuk-radios__item">
                <input aria-expanded="false" class="govuk-radios__input" id="createJob-sponsorship" name="createJob-sponsorship" type="radio" value="Yes"> <label class="govuk-label govuk-radios__label" for="createJob-sponsorship">Yes, we can offer a skilled worker sponsorship</label>
              </div>
              
              <div class="govuk-radios__item">
                <input aria-expanded="false" class="govuk-radios__input" id="createJob[sponsorship]-2" name="createJob-sponsorship" type="radio" value="No"> <label class="govuk-label govuk-radios__label" for="createJob[sponsorship]-2">No, we cannot offer a skilled worker sponsorship</label>
              </div>
            
            </div>
          </fieldset>
        </div>

        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
