{% extends "layout.njk" %}

{% set heading = 'Working patterns' %}
{% set caption = 'Create job listing - section 1 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if errorSummary.items.length %}
        {{ govukErrorSummary({
          titleText: 'Thereâ€™s a problem',
          errorList: errorSummary.items
        }) }}
      {% endif %}

      {% set h1 %}
        <span class="govuk-caption-l">
          {{caption}}
        </span>
        {{heading}}
      {% endset %}

      {% set partTimeDetails %}
        {{ govukCharacterCount({
          name: "create-job[partTimeDetails]",
          id: "create-job[partTimeDetails]",
          maxwords: 50,
          label: {
            text: "Details",
            classes: 'govuk-label--s'
          },
          value: data['create-job']['partTimeDetails'],
          errorMessage: inlineErrors['create-job'].partTimeDetails
        }) }}
      {% endset %}

      <form action="/jobs/new/working-patterns" method="post">

        {{data | log}}

        {{ govukCheckboxes({
          idPrefix: "create-job[workingPatterns]",
          name: "create-job[workingPatterns]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          errorMessage: inlineErrors['create-job'].workingPatterns,
          items: [
            {
              value: "Full time",
              text: "Full time",
              checked: checked("['create-job']['workingPatterns']", "Full time"),
              hint: {
                text: 'Usually 35 hours or more per week, Monday to Friday'
              }
            },
            {
              value: "Part time",
              text: "Part time",
              checked: checked("['create-job']['workingPatterns']", "Part time"),
              conditional: {
                html: partTimeDetails
              }
            }
          ]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
