{% extends "layout.njk" %}

{% set heading = 'Do you want to give a contact phone number for questions about the job?' %}
{% set caption = 'Create job listing - section 3 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">
          {{caption}}
        </span>
        {{heading}}
      {% endset %}

      {% set phone %}
        {{ govukInput({
          id: "create-job[phone-number]",
          name: "create-job[phone-number]",
          label: {
            text: "Phone number for questions about the job",
            classes: 'govuk-label--s'
          },
          type: "tel",
          autocomplete: "tel",
          classes: "govuk-input--width-20",
          value: data['create-job']['phone-number']
        }) }}

      {% endset %}

      <form action="/jobs/new/about">

        {{ govukRadios({
          idPrefix: "create-job[provide-phone-number]",
          name: "create-job[provide-phone-number]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "Yes",
              text: "Yes",
              checked: checked("['create-job']['provide-phone-number']", "Yes"),
              conditional: {
                html: phone
              }
            },
            {
              value: "No",
              text: "No",
              checked: checked("['create-job']['provide-phone-number']", "No")
            }
          ]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
