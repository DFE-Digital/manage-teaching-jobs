{% extends "layout.njk" %}

{% set version = 2 %}

{% set heading = 'Salary details' %}
{% set caption = 'Create job listing - section 1 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  {% set salary %}
    {{ govukInput({
      id: "create-job[full-time-salary]",
      name: "create-job[full-time-salary]",
      label: {
        text: "Full-time equivalent salary",
        classes: 'govuk-label--s'
      },
      classes: "govuk-input--width-20",
      value: data['create-job']['full-time-salary']
    }) }}
  {% endset %}

  {% set actualSalary %}
    {{ govukInput({
      id: "create-job[actual-salary]",
      name: "create-job[actual-salary]",
      label: {
        text: "Actual salary",
        classes: 'govuk-label--s'
      },
      classes: "govuk-input--width-20",
      value: data['create-job']['actual-salary']
    }) }}
  {% endset %}

  {% set payscale %}
    {{ govukInput({
      id: "create-job[pay-scale]",
      name: "create-job[pay-scale]",
      label: {
        text: "Pay scale",
        classes: 'govuk-label--s'
      },
      classes: "govuk-input--width-20",
      value: data['create-job']['pay-scale']
    }) }}
  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">
          {{caption}}
        </span>
        {{heading}}
      {% endset %}

      <form action="/jobs/new/listing-dates">
          {{ govukCheckboxes({
          idPrefix: "create-job[salary-details]",
          name: "create-job[salary-details]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: 'Select all that apply'
          },
          items: [
            {
              value: "Full-time equivalent salary",
              text: "Full-time equivalent salary",
              checked: checked("['create-job']['salary-details']", "Full-time equivalent salary"),
              hint: {
                text: 'This is what the annual salary would be for someone working full time'
              },
              conditional: {
                html: salary
              }
            },
            {
              value: "Actual salary",
              text: "Actual salary",
              checked: checked("['create-job']['salary-details']", "Actual salary"),
              hint: {
                text: 'This is the annual amount someone will take home'
              },
              conditional: {
                html: actualSalary
              }
            },
            {
              value: "Pay scale",
              text: "Pay scale",
              checked: checked("['create-job']['salary-details']", "Pay scale"),
              conditional: {
                html: payscale
              }
            }
          ]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
