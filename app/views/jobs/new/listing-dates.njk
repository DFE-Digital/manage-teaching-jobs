{% extends "layout.njk" %}

{% set heading = 'Enter dates and publish job listing' %}
{% set caption = 'Create job listing' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-l">
        {{caption}}
      </span>
      <h1 class="govuk-heading-l">
        {{heading}}
      </h1>

      {% set specificDate %}
        {{ govukDateInput({
          id: "createJob[publishDate--anotherDate]",
          name: "createJob[publish--anotherDate]",
          fieldset: {
            legend: {
              text: "Another date",
              classes: "govuk-fieldset__legend--s"
            }
          },
          hint: {
            text: "For example, 31 3 2023"
          },
          items: [{
            name: "createJob[publishDate--anotherDate][day]",
            label: "Day",
            classes: "govuk-input--width-2",
            value: data['createJob']['publishDate--anotherDate'].day
          }, {
            name: "createJob[publishDate--anotherDate][month]",
            label: "Month",
            classes: "govuk-input--width-2",
            value: data['createJob']['publishDate--anotherDate'].month
          }, {
            name: "createJob[publishDate--anotherDate][year]",
            label: "Year",
            classes: "govuk-input--width-4",
            value: data['createJob']['publishDate--anotherDate'].year
          }]
        }) }}
      {% endset %}

      {% set timeHtml %}
        {{ govukInput({
          id: "createJob[closing-time--another-time]",
          name: "createJob[closing-time--another-time]",
          label: {
            text: "Time",
            classes: 'govuk-label--s'
          },
          classes: 'govuk-input--width-5',
          hint: {
            text: "For example, 2pm or 14:30"
          },
          value: data['createJob']['closing-time--another-time']
        }) }}
      {% endset %}


      <form action="/jobs/new/confirmation">
        {{ govukRadios({
          idPrefix: "createJob[publishDate]",
          name: "createJob[publishDate]",
          fieldset: {
            legend: {
              text: "Publish date",
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "Today (6 June 2022)",
              text: "Today (6 June 2022)",
              checked: checked("['createJob']['publishDate']", "Today (6 June 2022)")
            },
            {
              value: "Tomorrow (7 June 2022)",
              text: "Tomorrow (7 June 2022)",
              checked: checked("['createJob']['publishDate']", "Tomorrow (7 June 2022)")
            },
            {
              value: "Another date",
              text: "Another date",
              checked: checked("['createJob']['publishDate']", "Another date"),
              conditional: {
                html: specificDate
              }
            }
          ]
        }) }}


        {{ govukDateInput({
          id: "createJob-list[closing-date]",
          name: "createJob-list[closing-date]",
          fieldset: {
            legend: {
              text: "Closing date",
              classes: "govuk-fieldset__legend--m"
            }
          },
          hint: {
            text: "For example, 31 3 2023"
          },
          items: [{
            name: "createJob[closing-date][day]",
            label: "Day",
            classes: "govuk-input--width-2",
            value: data['createJob']['closing-date'].day
          }, {
            name: "createJob[closing-date][month]",
            label: "Month",
            classes: "govuk-input--width-2",
            value: data['createJob']['closing-date'].month
          }, {
            name: "createJob[closing-date][year]",
            label: "Year",
            classes: "govuk-input--width-4",
            value: data['createJob']['closing-date'].year
          }]
        }) }}

        {{ govukRadios({
          idPrefix: "createJob[closing-time]",
          name: "createJob[closing-time]",
          fieldset: {
            legend: {
              text: "Closing time",
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "9am",
              text: "9am",
              checked: checked("['createJob']['closing-time']", "9am")
            },
            {
              value: "12pm (midday)",
              text: "12pm (midday)",
              checked: checked("['createJob']['closing-time']", "12pm (midday)")
            },
            {
              value: "5pm",
              text: "5pm",
              checked: checked("['createJob']['closing-time']", "5pm")
            },
            {
              value: "11:59pm",
              text: "11:59pm",
              checked: checked("['createJob']['closing-time']", "11:59pm")
            }
          ]
        }) }}

        {% set dateHtml %}
          {{ govukDateInput({
            id: "createJob[start-date--specific]",
            name: "createJob[start-date--specific]",
            fieldset: {
              legend: {
                text: "Date",
                classes: "govuk-fieldset__legend--s"
              }
            },
            hint: {
              text: "For example, 31 3 2023"
            },
            items: [{
              name: "createJob[start-date--specific][day]",
              label: "Day",
              classes: "govuk-input--width-2",
              value: data['createJob']['start-date--specific'].day
            }, {
              name: "createJob[start-date--specific][month]",
              label: "Month",
              classes: "govuk-input--width-2",
              value: data['createJob']['start-date--specific'].month
            }, {
              name: "createJob[start-date--specific][year]",
              label: "Year",
              classes: "govuk-input--width-4",
              value: data['createJob']['start-date--specific'].year
            }]
          }) }}
        {% endset %}

        {% set rangeHtml %}
          {{ govukDateInput({
            id: "createJob[start-date--from]",
            name: "createJob[start-date--from]",
            fieldset: {
              legend: {
                text: "Earliest start date",
                classes: "govuk-fieldset__legend--s"
              }
            },
            hint: {
              text: "For example, 31 3 2023"
            },
            items: [{
              name: "createJob[start-date--from][day]",
              label: "Day",
              classes: "govuk-input--width-2",
              value: data['createJob']['start-date--from'].day
            }, {
              name: "createJob[start-date--from][month]",
              label: "Month",
              classes: "govuk-input--width-2",
              value: data['createJob']['start-date--from'].month
            }, {
              name: "createJob[start-date--from][year]",
              label: "Year",
              classes: "govuk-input--width-4",
              value: data['createJob']['start-date--from'].year
            }]
          }) }}

          {{ govukDateInput({
            id: "createJob[start-date--to]",
            name: "createJob[start-date--to]",
            fieldset: {
              legend: {
                text: "Latest start date",
                classes: "govuk-fieldset__legend--s"
              }
            },
            hint: {
              text: "For example, 31 4 2023"
            },
            items: [{
              name: "createJob[start-date--to][day]",
              label: "Day",
              classes: "govuk-input--width-2",
              value: data['createJob']['start-date--to'].day
            }, {
              name: "createJob[start-date--to][month]",
              label: "Month",
              classes: "govuk-input--width-2",
              value: data['createJob']['start-date--to'].month
            }, {
              name: "createJob[start-date--to][year]",
              label: "Year",
              classes: "govuk-input--width-4",
              value: data['createJob']['start-date--to'].year
            }]
          }) }}
        {% endset %}

        {% set otherHtml %}
          {{ govukInput({
            id: "createJob[start-date--other]",
            name: "createJob[start-date--other]",
            label: {
              text: "Details",
              classes: "govuk-label--s"
            },
            hint: {
              text: "For example ‘Easter term’"
            },
            value: data['createJob']['start-date--other']
          }) }}
        {% endset %}

        {{ govukRadios({
          idPrefix: "createJob[start-date]",
          name: "createJob[start-date]",
          fieldset: {
            legend: {
              html: 'Job start date',
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "Specific date",
              text: "Specific date",
              checked: checked("['createJob']['start-date']", "Specific date"),
              conditional: {
                html: dateHtml
              }
            },
            {
              value: "Date range",
              text: "Date range",
              checked: checked("['createJob']['start-date']", "Date range"),
              conditional: {
                html: rangeHtml
              }
            },
            {
              value: "Other",
              text: "Other",
              checked: checked("['createJob']['start-date']", "Other"),
              conditional: {
                html: otherHtml
              }
            }
          ]
        }) }}

        <p>By publishing this job listing you agree to the <a href="#">terms and conditions</a>.</p>

        {{ govukButton({
          text: "Publish job listing"
        }) }}

        {# {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }} #}

      </form>

      {# <p><a href="#">Cancel</a></p> #}



    </div>
  </div>

{% endblock %}
