{% extends "layout.njk" %}

{% set title = 'Do you want to ask applicants for their religion?' + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% if user.organisation.schools %}
    {% set organisationLabel = 'organisation profile' %}
  {% else %}
    {% set organisationLabel = 'school profile' %}
  {% endif %}

{% block content %}


  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form action="/jobs/new/about">
           
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="religion-questions">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <span class="govuk-caption-l">
                        Create job listing - section 3 of 4
                        </span>
                        <h1 class="govuk-fieldset__heading">
                        What religious information do you want to ask applicants for?
                        </h1>
                    </legend>

                    <div id="religion-questions-hint" class="govuk-hint">
                        Select all that apply.
                    </div>
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" id="religion-questions" name="religion-questions" type="checkbox" value="Religious denomination or faith">
                        <label class="govuk-label govuk-checkboxes__label" for="religion-questions">
                            Religious denomination or faith
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" id="religion-questions" name="religion-questions" type="checkbox" value="Address of place of worship">
                        <label class="govuk-label govuk-checkboxes__label" for="religion-questions">
                            Address of place of worship
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" id="religion-questions" name="religion-questions" type="checkbox" value="Religious referee">
                        <label class="govuk-label govuk-checkboxes__label" for="religion-questions">
                            Religious referee
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" id="religion-questions-2" name="religion-questions" type="checkbox" value="Baptism certificate">
                        <label class="govuk-label govuk-checkboxes__label" for="religion-questions-2">
                            Baptism certificate
                        </label>
                    </div>
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" id="religion-questions-3" name="religion-questions" type="checkbox" value="Address and date of baptism">
                        <label class="govuk-label govuk-checkboxes__label" for="religion-questions-3">
                            Address and date of baptism
                        </label>
                    </div>
                    </div>
                </fieldset>
            </div>
          
        {{ govukButton({
          text: "Save and continue"
        }) }}
      </form>
      <p><a href="/organisation">Cancel</a></p>

    </div>
  </div>

{% endblock %}
