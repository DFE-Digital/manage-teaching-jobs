{% extends "layout.njk" %}

{% set heading = 'Subjects (optional)' %}
{% set caption = 'Create job listing - section 1 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">
          {{caption}}
        </span>
        {{heading}}
      {% endset %}

      <form action="/jobs/new/contract">

        {{ govukCheckboxes({
          idPrefix: "create-job[subjects]",
          name: "create-job[subjects]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "English",
              text: "English",
              checked: checked("['create-job']['subjects']", "English")
            },
            {
              value: "Maths",
              text: "Maths",
              checked: checked("['create-job']['subjects']", "Maths")
            },
            {
              value: "Science",
              text: "Science",
              checked: checked("['create-job']['subjects']", "Science")
            },
            {
              value: "Geography",
              text: "Geography",
              checked: checked("['create-job']['subjects']", "Geography")
            }
          ]
        }) }}

        {# <p class="govuk-!-margin-bottom-7"><a href="/jobs/new/contract">Continue without adding a subject</a></p> #}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
