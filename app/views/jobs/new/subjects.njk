{% extends "layout.njk" %}

{% set heading = 'Subjects' %}
{% set caption = 'Create job listing - section 1 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set h1 %}
        <span class="govuk-caption-l">
          {{caption}}
        </span>
        {{heading}}
      {% endset %}

      {# <form action="/jobs/new/contract"> #}
      <form action="/jobs/new/contract">

        {% set otherInput %}
          {{ govukInput({
            id: "create-job[subjects--other]",
            name: "create-job[subjects--other]",
            label: {
              text: "Subject",
              classes: 'govuk-label--s'
            },
            classes: 'govuk-input--width-20',
            value: data['create-job']['subjects--other']
          }) }}
        {% endset %}

        {{ govukCheckboxes({
          idPrefix: "create-job[subjects]",
          name: "create-job[subjects]",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "English",
              text: "English",
              checked: checked("['create-job']['subjects']", "English")
            },
            {
              value: "Maths",
              text: "Maths",
              checked: checked("['create-job']['subjects']", "Maths")
            },
            {
              value: "Science",
              text: "Science",
              checked: checked("['create-job']['subjects']", "Science")
            },
            {
              value: "Geography",
              text: "Geography",
              checked: checked("['create-job']['subjects']", "Geography")
            },
            {
              value: "Other",
              text: "Other",
              checked: checked("['create-job']['subjects']", "Other"),
              conditional: {
                html: otherInput
              }
            }
          ]
        }) }}

        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
