{% extends "layout.njk" %}

{% set heading = 'Using the service’s application form' %}
{% set caption = 'Create job listing - section 3 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">
        {{caption}}
      </span>
      <h1 class="govuk-heading-l">
        {{heading}}
      </h1>

      <p>This service’s application form:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>
            is always up to date with the ‘keeping children safe in education’ guidelines
          </li>
          <li>
           provides a simple experience
          </li>
          <li>
            makes it easy to shortlist or reject applications
          </li>
        </ul>

      {# {% set whyHtml %}      {% endset %} #}
      {# {{ govukDetails({
        summaryText: "The advantages of this service’s application form",
        html: whyHtml
      }) }} #}

      {{ govukDetails({
        summaryText: "What an application made through this service looks like",
        text: "Text"
      }) }}

      <form action="/jobs/new/method" method="post">

        {{ govukRadios({
          idPrefix: "create-job[method]",
          name: "create-job[method]",
          fieldset: {
            legend: {
              html: "Do you want to use this service’s application form?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "Yes",
              text: "Yes"
            },
            {
              value: "No",
              text: "No",
              hint: {
                text: 'You’ll need to provide additional details about how to apply'
              }
            }
          ]
        }) }}

        {# {{ govukRadios({
          idPrefix: "blah",
          name: "blah",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "Online through this service",
              text: "Online through this service",
              hint: {
                text: "This is the easiest and fastest route for candidates"
              }
            },
            {
              value: "Another way",
              text: "Another way",
              hint: {
                text: 'You’ll be able to give candidates instructions about how they can apply'
              }
            }
          ]
        }) }} #}




        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
