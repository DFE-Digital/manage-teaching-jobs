{% extends "layout.njk" %}

{% set heading = 'Managing applications' %}
{% set caption = 'Create job listing - section 3 of 4' %}
{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">
        {{caption}}
      </span>
      <h1 class="govuk-heading-l">
        {{heading}}
      </h1>

      {% set whyHtml %}

        <p>Manage applications through this service means that you can:</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>
            set up an application process for your job listing with one click, saving time and money
          </li>
          <li>
            view applicant information in a structured way, making it easier to shortlist candidates
          </li>
          <li>
            manage all jobs in a single place, whether you’re hiring for a single school or a multi-academy trust
          </li>
          <li>
            easily notify successful and unsuccessful candidates
          </li>
          <li>
            be sure that you’re complying with the latest recruitment legislation
          </li>
        </ul>

            {# - always up to date with the   keeping children safe in education guidelines
      - the same as the ‘quick apply’ feature on TES
      - fastest/easiest process for candidates
      - manage applications more easily/streamlined #}
      {% endset %}
      {{ govukDetails({
        summaryText: "The benefits of using this service’s application form",
        html: whyHtml
      }) }}

      {{ govukDetails({
        summaryText: "Take a look at an example application form",
        text: "Text"
      }) }}

      <form action="/jobs/new/method" method="post">

        {{ govukRadios({
          idPrefix: "create-job[method]",
          name: "create-job[method]",
          fieldset: {
            legend: {
              html: "Do you want to use this service’s application form?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "Yes",
              text: "Yes",
              hint: {
                text: "This uses this service’s application form which provides the best experience"
              }
            },
            {
              value: "No",
              text: "No"
            }
          ]
        }) }}

        {# {{ govukRadios({
          idPrefix: "blah",
          name: "blah",
          fieldset: {
            legend: {
              html: h1,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "Online through this service",
              text: "Online through this service",
              hint: {
                text: "This is the easiest and fastest route for candidates"
              }
            },
            {
              value: "Another way",
              text: "Another way",
              hint: {
                text: 'You’ll be able to give candidates instructions about how they can apply'
              }
            }
          ]
        }) }} #}




        {{ govukButton({
          text: "Save and continue"
        }) }}

        {{ govukButton({
          text: 'Save and finish later',
          classes: 'govuk-!-margin-left-1 govuk-button--secondary'
        }) }}
      </form>
      <p><a href="#">Cancel</a></p>



    </div>
  </div>

{% endblock %}
