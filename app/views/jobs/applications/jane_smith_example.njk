{% extends "layout.njk" %}

{% set primaryNavId = 'jobs' %}
{% set subNavId = 'applications' %}



{% block beforeContent %}
  <a class="govuk-back-link" href="javascript:window.history.back()">Back</a>
{% endblock %}

{% block content %}

  {{ govukNotificationBanner({
    html: "<h2 class=\"govuk-heading-m\">"+flash+"</h2>",
    type: "success",
    icon: false
  }) if flash and flash.length }}


    <div class="govuk-grid-row">
        
        <div class="govuk-grid-column-full">

            <span class="govuk-caption-m">Teacher at Bexleyheath Academy</span>

            <h1 class="govuk-heading-l govuk-!-margin-bottom-5 govuk-!-margin-top-0">
              Jane Smith 
       
            </h1>

         
                <div class="govuk-inset-text">
                    <p class=" govuk-!-margin-bottom-0 govuk-!-margin-top-0">
                        Interview details: 10am Tuesday 21st January 2025
                    </p>
                </div>
       

            <div class="govuk-button-group govuk-!-margin-top-5 govuk-!-margin-bottom-6">
                <form method="post" action="#">
                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        Download application
                    </button>
                </form>
                <form action="/jobs/application/tag/{{jobseeker.id}}">
                    <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                    Update application status
                    </button>
                </form>

                <ul class="app-sub-navigation__list">


      

        <li class="app-sub-navigation__item">
          <a class="app-sub-navigation__link" aria-current="page" href="/jobs/applications/jane_smith">Application</a>
        </li>
      

        <li class="app-sub-navigation__item">
          <a class="app-sub-navigation__link" href="/jobs/applications/jane_smith_preinterview">Pre-interview checks</a>
        </li>
      
    
    </ul>

                {% if jobseeker.tag == 'Shortlisted' %}
                    <div>
                        <button type="submit" class="copy-email govuk-button govuk-button--secondary" data-module="govuk-button" style="text-decoration:none;">
                            Copy email
                        </button>
                    </div>   
                    <form action="/jobs/{{jobseeker.id}}/interview">
                        <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            Invite to interview
                        </button>
                    </form>   
                {% endif %} 
                {% if jobseeker.tag == 'Interviewing' %}
                    <div>
                        <button type="submit" class="copy-email govuk-button govuk-button--secondary" data-module="govuk-button" style="text-decoration:none;">
                            Copy email
                        </button>
                    </div>   
                    <form action="interview_single">
                        <button type="submit" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            Edit interview details
                        </button>
                    </form>   
                {% endif %}  

            </div>

        </div>
        
     
        <div class="govuk-grid-column-one-third">
        

            
            <div class="govuk-summary-card">
                <div class="govuk-summary-card__title-wrapper">
                    <h2 class="govuk-summary-card__title">
                        Notes
                    </h2>
                    <ul class="govuk-summary-card__actions">
                        <li class="govuk-summary-card__action">
                            <a class="govuk-link govuk-link--no-visited-state" href="#">Edit notes</a>
                        </li>
                        
                    </ul>
                </div>
                <div class="govuk-summary-card__content">

                    <p class="govuk-!-margin-bottom-0">
                        Great work experience, I think we should shortlist
                    </p>
                    <p class="govuk-body-s govuk-!-margin-top-1">
                        By Bob Smith, 2024-06-26 12:04:49 +0100
                    </p>

                    <hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible govuk-!-margin-bottom-3">

                    <p class="govuk-!-margin-bottom-0">
                       Also like the personal statement
                    </p>
                    <p class="govuk-body-s govuk-!-margin-top-1">
                        By Rachel Brown, 2024-06-28 16:32:22 +0100
                    </p>

                    <hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible">


                    <div class="govuk-form-group govuk-character-count govuk-!-margin-top-3" data-module="govuk-character-count" data-maxlength="150">
                        <label class="govuk-label" for="label-as-page-heading">
                            Add a note
                        </label>
                        <textarea class="govuk-textarea govuk-js-character-count" id="label-as-page-heading" name="labelAsPageHeading" rows="5" aria-describedby="label-as-page-heading-info"></textarea>
                        <div id="label-as-page-heading-info" class="govuk-hint govuk-character-count__message govuk-body-s">
                            You have 150 characters remaining
                        </div>
                    </div>

                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        Save note
                    </button>

                </div>
            </div>

        </div>

    </div>
    
    

  

{% endblock %}

