
{% extends "layout.njk" %}

{% set name = jobseeker.profile.firstName + ' ' + jobseeker.profile.lastName %}

{% set caption = 'Send bulk rejection emails'  %}

{% set title = 'Customise your message' %}

{% set primaryNavId = 'jobs' %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "#"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form method="post">

        <h1 class="govuk-label-wrapper">
           <span class="govuk-caption-l">
            {{caption}}
          </span>
            <label class="govuk-label govuk-label--l" for="customise-message-1">
              What do you want the email to say?
            </label>
          </h1>


        <div class="govuk-form-group">
    
<div id="event-name-hint" class="govuk-hint">
    Enter your message for applicants. Your subject line and who the email is sent to will be automatically generated for you on the next page.
  </div>
<textarea class="govuk-textarea" id="customise-message-1" name="customise-message-1" rows="15" >
Unfortunately we are not considering your application at this time, thank you for applying.
</textarea>
        </div>

        <div class="govuk-button-group">

          <button class="govuk-button" data-module="govuk-button">
            Continue to preview of emails
          </button>

        </div>


        <p><a href="#">Cancel</a></p>
      </form>



    </div>
  </div>

{% endblock %}
