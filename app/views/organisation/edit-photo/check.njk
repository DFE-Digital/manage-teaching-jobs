{% extends "layout.njk" %}

{% set heading = 'Check and upload photo' %}
{% if user.organisation.schools %}
  {% set caption = 'Organisation profile' %}
  {% set label = 'Organisation photo' %}
{% else %}
  {% set caption = 'School profile' %}
  {% set label = 'School photo' %}
{% endif %}

{% set title = heading + ' - ' + caption %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:history.back();"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <span class="govuk-caption-l">
        {{caption}}
      </span>
      <h1 class="govuk-heading-l">
        {{heading}}
      </h1>

      <img src="{{data.photo}}" alt="Photo" width="100%">

      <p class="govuk-body">Photo.jpg, 2MB</p>

      <form method="post">

        {{ govukRadios({
          idPrefix: "check-photo-upload",
          name: "check-photo-upload",
          fieldset: {
            legend: {
              text: "Is this file correct?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m govuk-!-padding-top-5"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes, add this file"
            },
            {
              value: "no",
              text: "No, I want to choose a different file"
            }
          ]
        }) }}


        {{ govukButton({
          text: "Continue"
        }) }}

      </form>

      <p><a href="/organisation">Cancel</a></p>

    </div>
  </div>

{% endblock %}
